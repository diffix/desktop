{
  "name": "easy_diffix",
  "productName": "Easy Diffix",
  "author": "Open Diffix",
  "version": "0.1.2",
  "description": "Desktop app for anonymizing data using Open Diffix Elm",
  "main": ".webpack/main",
  "scripts": {
    "build": "dotnet publish -o ./bin/ -c Release ./reference/src/OpenDiffix.CLI/ -p:UseAppHost=True",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "check-format": "prettier --check src",
    "prettier": "prettier --write src"
  },
  "keywords": [],
  "license": "UNLICENSED",
  "config": {
    "forge": {
      "packagerConfig": {
        "extraResource": [
          "bin",
          "assets"
        ],
        "name": "easy_diffix",
        "icon": "assets/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "frameworkVersion": "net5.0",
            "setupIcon": "assets/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "diffix",
              "name": "publisher"
            },
            "prerelease": true,
            "draft": true
          }
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "preload": {
                    "js": "./src/preload.ts"
                  },
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.59",
    "@electron-forge/maker-deb": "6.0.0-beta.59",
    "@electron-forge/maker-rpm": "6.0.0-beta.59",
    "@electron-forge/maker-squirrel": "6.0.0-beta.59",
    "@electron-forge/maker-zip": "6.0.0-beta.59",
    "@electron-forge/plugin-webpack": "6.0.0-beta.59",
    "@electron-forge/publisher-github": "^6.0.0-beta.59",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@types/node": "^16.4.6",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "css-loader": "^6.2.0",
    "electron": "15.0.0-alpha.2",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^6.2.13",
    "node-loader": "^2.0.0",
    "prettier": "^2.3.2",
    "style-loader": "^3.2.1",
    "ts-loader": "^9.2.4",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "antd": "^4.16.9",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
