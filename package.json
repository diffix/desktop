{
  "name": "publisher",
  "version": "0.0.1",
  "private": true,
  "description": "Desktop app for anonymizing data using Open Diffix Publish",
  "main": "index.ts",
  "scripts": {
    "build": "electron-snowpack build",
    "clean": "electron-snowpack clean",
    "dev:snowpack": "electron-snowpack dev",
    "dev:fable": "dotnet fable watch src_dotnet/OpenDiffix.Publisher -o src/compiled --lang typescript --typedArrays false",
    "dev": "run-p -l -n -r dev:*",
    "dist": "electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "open": "open dist/mac/${npm_package_name}.app",
    "try": "run-s clean build dist:dir open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diffix/publisher.git"
  },
  "author": "Open Diffix",
  "bugs": {
    "url": "https://github.com/diffix/publisher/issues"
  },
  "homepage": "https://github.com/diffix/publisher#readme",
  "dependencies": {
    "electron-snowpack": "*",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@snowpack/plugin-typescript": "^1.2.1",
    "@types/snowpack-env": "^2.3.3",
    "electron": "12.0.5",
    "electron-builder": "^22.10.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.3.2"
  },
  "build": {
    "extends": "electron-snowpack/config/electron-builder.js"
  }
}
